  <script>
    function toggleCategory(category) {
      const target = document.getElementById(`category-${category}`);
      const arrow = document.getElementById(`arrow-${category}`);

      const allSections = document.querySelectorAll('[id^="category-"]');
      const allArrows = document.querySelectorAll('[id^="arrow-"]');

      const isOpen = target.style.display === 'block';

      // Close all other sections and reset arrows
      allSections.forEach(section => section.style.display = 'none');
      allArrows.forEach(svg => svg.classList.remove('rotate-0'));
      allArrows.forEach(svg => svg.classList.add('rotate-180'));

      if (!isOpen) {
        target.style.display = 'block';
        arrow.classList.remove('rotate-180');
        arrow.classList.add('rotate-0');
      } else {
        target.style.display = 'none';
        arrow.classList.remove('rotate-0');
        arrow.classList.add('rotate-180');
      }
    }

    // On initial load â€” open biriyani only
    window.onload = function() {
      const allSections = document.querySelectorAll('[id^="category-"]');
      const allArrows = document.querySelectorAll('[id^="arrow-"]');

      allSections.forEach(section => {
        section.style.display = section.id === 'category-biriyani' ? 'block' : 'none';
      });

      allArrows.forEach(svg => {
        if (svg.id === 'arrow-biriyani') {
          svg.classList.remove('rotate-180');
          svg.classList.add('rotate-0');
        } else {
          svg.classList.remove('rotate-0');
          svg.classList.add('rotate-180');
        }
      });
    }
  </script>

  <script>
    const cart = {};
    const billSummary = document.getElementById('bill-summary');
    const subtotalField = document.getElementById('subtotal');
    const gstField = document.getElementById('gst');
    const totalField = document.getElementById('total');

    document.addEventListener('DOMContentLoaded', function() {
      const quantityInputs = document.querySelectorAll('.quantity-input');

      quantityInputs.forEach(input => {
        input.addEventListener('input', () => {
          const name = input.getAttribute('data-name').trim();
          const price = parseFloat(input.getAttribute('data-price'));
          const qty = Number(input.value.trim());

          if (isNaN(qty) || qty < 0) {
            alert('Please enter a valid quantity.');
            return;
          }

          if (qty === 0) {
            delete cart[name];
          } else {
            cart[name] = {
              price,
              quantity: qty
            };
          }

          updateBillDisplay();
        });
      });
    });

    function updateBillDisplay() {
      let subtotal = 0;
      billSummary.innerHTML = '';

      Object.entries(cart).forEach(([name, {
        price,
        quantity
      }]) => {
        const itemTotal = price * quantity;
        subtotal += itemTotal;

        const itemLine = document.createElement('p');
        itemLine.textContent = `${name} - â‚¹${price} Ã— ${quantity} = â‚¹${itemTotal}`;
        billSummary.appendChild(itemLine);
      });

      const gst = subtotal * 0.05;
      const total = subtotal + gst;

      subtotalField.textContent = `${subtotal.toFixed(2)} â‚¹`;
      gstField.textContent = `${gst.toFixed(2)} â‚¹`;
      totalField.textContent = `${total.toFixed(2)} â‚¹`;
    }
  </script>


