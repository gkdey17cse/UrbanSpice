            <thead class="bg-orange-100 text-gray-700 uppercase tracking-wider">
              <tr>
                <th class="px-4 py-3">Item</th>
                <th class="px-4 py-3 text-center">Quantity</th>
                <th class="px-4 py-3 text-center">Unit Price (₹)</th>
                <th class="px-4 py-3 text-right">Total (₹)</th>
              </tr>
            </thead>
            <tbody id="bill-summary" class="divide-y divide-gray-100 font-medium text-gray-800">
              <!-- Dynamic rows injected by JavaScript -->
            </tbody>
          </table>
        </div>

        <!-- Totals Section -->
        <div class="mt-6 w-full md:w-1/2 lg:w-1/3 ml-auto text-base text-sm">
          <div class="flex justify-between items-center py-2 border-b border-gray-200">
            <span class="text-gray-600 font-medium">Subtotal:</span>
            <span id="subtotal" class="font-semibold text-gray-900">0 ₹</span>
          </div>
          <div class="flex justify-between items-center py-2 border-b border-gray-200">
            <span class="text-gray-600 font-medium">GST (5%):</span>
            <span id="gst" class="font-semibold text-gray-900">0 ₹</span>
          </div>
          <div class="flex justify-between items-center py-3 font-semibold text-orange-600">
            <span>Total:</span>
            <span id="total">0 ₹</span>
          </div>
        </div>
      </div>

      <!--Form Section -->
      <div class="col-span-3 my-6 px-4">
        <h2 class="p-2 xl:text-2xl font-bold mb-4 text-orange-600 tracking-wide">Customer Details</h2>

        <!-- Customer Name -->
        <div class="px-4 py-1 mb-2">
          <h2 class="">Customer Name <span class="text-red-500 text-sm">*</span></h2>
          <div class="py-2 text-red-500 ">
            <input name="name" id="name" type="text" placeholder="Customer First Name" class="text-zinc-600 rounded-md shadow-lg w-full border border-orange-500 py-2.5 px-4 focus:border focus:border-orange-500">

          </div>
        </div>
        <!-- Customer Name End -->

        <!-- Mobile Numberr -->
        <div class="px-4 py-1 mb-2">
          <h2 class="">Mobile Number <span class="text-red-500 text-sm">*</span></h2>
          <div class="py-2 text-red-500">
            <input name="phone" id="phone" type="text" placeholder="Customer Contact No. (Ex - 1234567890)" class="text-zinc-600 rounded-md shadow-lg w-full border border-orange-500 py-2.5 px-4 focus:border focus:border-orange-500">
          </div>
        </div>
        <!-- Mobile Numberr -->


        <!-- Email Address -->
        <div class="px-4 py-1 mb-2">
          <h2 class="">Email Address <span class="text-red-500 text-sm">*</span></h2>
          <div class="mt-2.5 gap-5 text-red-500">
            <input name="email" id="email" type="email" placeholder="Customer Email Address (Ex - abc@xyz.com)" class="text-zinc-600 rounded-md shadow-lg w-full border border-orange-500 py-2.5 px-4 focus:border focus:border-orange-500">
          </div>
        </div>
        <!-- Email Address -->


        <!-- Delivery Address Details -->
        <div class="px-4 py-1 mb-2 text-red-500 ">
