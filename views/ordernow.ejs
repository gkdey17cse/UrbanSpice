  <!-- Toggle Category Logic -->
  <script>
    function toggleCategory(category) {
      const section = document.getElementById(`category-${category}`);
      const arrow = document.getElementById(`arrow-${category}`);

      const isOpen = section.classList.contains('max-h-[4000px]');

      document.querySelectorAll('[id^="category-"]').forEach(sec => {
        sec.classList.remove('max-h-[4000px]');
        sec.classList.add('max-h-0');
      });

      document.querySelectorAll('[id^="arrow-"]').forEach(arw => {
        arw.classList.remove('rotate-0');
        arw.classList.add('rotate-180');
      });

      if (!isOpen) {
        section.classList.remove('max-h-0');
        section.classList.add('max-h-[4000px]');
        arrow.classList.remove('rotate-180');
        arrow.classList.add('rotate-0');
      }
    }

    window.onload = function() {
      document.querySelectorAll('[id^="category-"]').forEach(sec => {
        if (sec.id === 'category-biriyani') {
          sec.classList.remove('max-h-0');
          sec.classList.add('max-h-[4000px]');
        } else {
          sec.classList.remove('max-h-[4000px]');
          sec.classList.add('max-h-0');
        }
      });

      document.querySelectorAll('[id^="arrow-"]').forEach(arw => {
        if (arw.id === 'arrow-biriyani') {
          arw.classList.remove('rotate-180');
          arw.classList.add('rotate-0');
        } else {
          arw.classList.remove('rotate-0');
          arw.classList.add('rotate-180');
        }
      });
    };
  </script>

  <!-- Cart & Bill Calculation -->
  <script>
    const cart = {};
    const billSummary = document.getElementById('bill-summary');
    const subtotalField = document.getElementById('subtotal');
    const gstField = document.getElementById('gst');
    const totalField = document.getElementById('total');

    document.addEventListener('DOMContentLoaded', function() {
      const quantityInputs = document.querySelectorAll('.quantity-input');

      quantityInputs.forEach(input => {
        input.addEventListener('input', () => {
          const name = input.getAttribute('data-name').trim();
          const price = parseFloat(input.getAttribute('data-price'));
          const qty = Number(input.value.trim());

          if (isNaN(qty) || qty < 0) {
            alert('Please enter a valid quantity.');
            input.value = "";
            return;
          }

          if (qty === 0) {
            delete cart[name];
          } else {
            cart[name] = {
              price,
              quantity: qty
            };
          }

          updateBillDisplay();
        });
      });
    });

    function updateBillDisplay() {
      const billForm = document.getElementById('formValidation');
      let subtotal = 0;
      billSummary.innerHTML = '';

      const cartEntries = Object.entries(cart);

      if (cartEntries.length === 0) {
        billForm.classList.add('hidden');
        return;
      } else {
        billForm.classList.remove('hidden');
      }

      cartEntries.forEach(([name, {
        price,
        quantity
      }]) => {
        const itemTotal = price * quantity;
        subtotal += itemTotal;

        const row = document.createElement('tr');
        row.innerHTML = `
        <td class="px-4 py-2">${name}</td>
        <td class="px-4 py-2 text-center">${quantity}</td>
        <td class="px-4 py-2 text-center">${price.toFixed(2)}</td>
        <td class="px-4 py-2 text-right">${itemTotal.toFixed(2)}</td>
      `;
        billSummary.appendChild(row);
      });

      const gst = subtotal * 0.05;
      const total = subtotal + gst;

      subtotalField.textContent = `${subtotal.toFixed(2)} ₹`;
      gstField.textContent = `${gst.toFixed(2)} ₹`;
      totalField.textContent = `${total.toFixed(2)} ₹`;
    }
  </script>

