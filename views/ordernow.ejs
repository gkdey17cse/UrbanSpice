        <h2 class="p-2 xl:text-2xl font-bold mb-4 text-orange-600 tracking-wide">Your Bill Summary</h2>

        <!-- Itemized Bill Table -->
        <div class="overflow-x-auto shadow border border-gray-200 rounded-lg">
