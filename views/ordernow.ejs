  <script>
    jQuery.validator.addMethod("phoneIndia", function(phone_number, element) {
      phone_number = phone_number.replace(/\s+/g, "");
      return this.optional(element) || phone_number.length > 9 &&
        phone_number.match(/^(\+91)?[6-9]\d{9}$/);
    }, "Please specify a valid phone number");

    $("#formValidation").validate({
      rules: {
        name: {
          required: true,
          minlength: 2
        },
        phone: {
          required: true,
          phoneIndia: true
        },
        email: {
          required: true,
          email: true
        },
        address1: "required",
        datetime: "required",
      },
      messages: {
        name: {
          required: "First Name is Required",
          minlength: "Name must have at least 2 characters",
        },
        phone: {
          required: "Phone Number is Required",
          phoneIndia: "Enter a valid Indian phone number",
        },
        email: {
          required: "Email is Required",
          email: "Enter a valid Email Address",
        },
        address1: {
          required: "Enter your Address"
        },
        datetime: {
          required: "Please enter Date & Time for delivery"
        },
      },
      submitHandler: async function(form) {
        const totalAmountText = document.getElementById("total").textContent.trim();
        console.log("Total:", totalAmountText);
        const totalAmount = parseFloat(totalAmountText.replace(/[^\d.]/g, ''));
        console.log("Parsed totalAmount:", totalAmount);

        const paymentMode = document.querySelector('input[name="default-radio"]:checked').value;
        if (paymentMode === "cod") {
          // alert('Your Order Placed Successfully');
          window.location.href = "/ordersuccess";
          form.submit();
        } else {
          try {
            const response = await fetch("/payment/create-order", {
              method: "POST",
              headers: {
                "Content-Type": "application/json"
              },
              body: JSON.stringify({
                amount: totalAmount
              })
            });
            console.log("Fetch status:", response.status);

            if (!response.ok) {
              const err = await response.text();
              throw new Error(err || "Order creation failed");
            }
            const orderData = await response.json();
            console.log("Order Data:", orderData);

            const options = {
              key: "rzp_live_n8YDWLNNngevE5",
              amount: orderData.amount,
              currency: "INR",
              name: "Urban Spice",
              description: "Food Order Payment",
              order_id: orderData.id,
              handler: () => window.location.href = "/success",
              prefill: {
                name: $("#name").val(),
                email: $("#email").val(),
                contact: $("#phone").val(),
              },
              theme: {
                color: "#ff8000"
              }
            };
            new Razorpay(options).open();
          } catch (error) {
            console.error("Error", error);
            alert("Payment init failed: " + error.message);
          }
        }
        return false;
      }
    });
  </script>



