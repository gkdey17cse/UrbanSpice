          <input name="address1" id="address1" type="text" placeholder="House No / Flat No / Block No (Ex - 98/45 Shakespear Sarani)" class="text-zinc-600 mt-2.5 rounded-md shadow-lg w-full border border-orange-500 py-2.5 px-4 focus:border focus:border-orange-500">
          <input name="address2" id="address2" type="text" placeholder="Town / City (Ex - Nagerbazar , Kolkata)" class="text-zinc-600 mt-5 rounded-md shadow-lg w-full border border-orange-500 py-2.5 px-4 focus:border focus:border-orange-500">
          <div class="flex justify-between items-center mt-5 gap-5">
            <input name="pincode" id="pincode" type="text" placeholder="Pincode (Ex - 743322)" class="text-zinc-600 rounded-md shadow-lg w-full border border-orange-500 py-2.5 px-4 focus:border focus:border-orange-500">
            <input id="state" type="text" placeholder="State (Ex - West Bengal)" class="text-zinc-600 rounded-md shadow-lg w-full border border-orange-500 py-2.5 px-4 focus:border focus:border-orange-500">
          </div>
          <input id="landmark" type="text" placeholder="Landmark (Ex - Right side second house , Beside Netaji Sangha club)" class="text-zinc-600 mt-5 rounded-md shadow-lg w-full border border-orange-500 py-2.5 px-4 focus:border focus:border-orange-500">
        </div>
        <!-- Delivery Address Details -->

        <!-- Time Schedule-->
        <!-- Delivery Scheduling Section -->
        <div x-data="{ isScheduled: false }" class="px-4 py-2 my-3 ">

          <!-- Schedule Toggle -->
          <div class="mb-3">
            <label class="inline-flex items-center">
              <input type="checkbox" @change="isScheduled = !isScheduled" class="form-checkbox text-orange-600 rounded">
              <span class="ml-2 font-medium text-gray-700">Schedule Delivery</span>
            </label>
          </div>

          <!-- Delivery Date & Time Section (visible only if scheduled) -->
          <div x-show="isScheduled" x-transition class="transition-all duration-300 ease-in-out">
            <h2 class="text-gray-700">Delivery Date & Time</h2>

            <div class="mt-3.5">
              <!-- Only change is here (minDate: "today") -->
              <div x-data x-init="flatpickr($refs.datetimewidget, { 
                    wrap: true, 
                    enableTime: true, 
                    dateFormat: 'M j, Y h:i K', 
                    minDate: 'today' 
                  });" x-ref="datetimewidget" class="flatpickr container mt-2">

                <input x-ref="datetime" type="text" name="datetime" id="datetime" data-input placeholder="Select Date & Time for Delivery" class="block w-full px-3 py-2.5 border border-orange-500 focus:border-orange-600 rounded-lg shadow-sm">
              </div>
            </div>
          </div>
        </div>

        <!-- Customer Details -->
        <div class="px-4 py-1 my-2">
          <h2 class="">Payment Mode</h2>
          <div class="grid grid-cols-3 pt-3.5">
            <div class="flex items-center justify-start mb-4">
              <input checked id="cod" type="radio" value="cod" name="default-radio" class="w-4 h-4 text-orange-500 bg-gray-100 border-gray-300">
              <label for="default-radio-1" class="ml-2 text-gray-900">Cash on
                Delivery</label>
            </div>
            <div class="flex items-center justify-start">
              <input id="card" type="radio" value="card" name="default-radio" class="w-4 h-4 text-orange-500 bg-gray-100 border-gray-300">
              <label for="default-radio-2" class="ml-2 text-gray-900">Online</label>
            </div>
          </div>
        </div>
        <!-- Customer Details End -->

        <!-- Other Instruction -->
        <div class="px-4 py-1 mb-4">
          <h2>Instructions</h2>
          <div class="w-auto mt-2.5">
            <textarea id="message" rows="4" class="block p-2.5 w-full text-gray-900 bg-gray-50 rounded-lg border border-orange-500 focus:ring-blue-500 focus:border-blue-500" placeholder="Any Special Instructions"></textarea>
          </div>
        </div>
        <!-- Other Instruction End -->


      </div>
      <!--Form End -->
    </div>

    <!-- Submit Button -->
    <div class="w-full flex justify-center items-center px-2 py-3">
      <button type="submit" class="px-4 py-2.5 w-1/2 text-base lg:text-lg text-white font-semibold tracking-widest bg-gradient-to-r from-orange-400 via-amber-500 to-orange-500 
                active:translate-x-2 active:translate-y-2 duration-300">Confirm Order
      </button>
    </div>
  </form>
