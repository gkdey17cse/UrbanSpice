      responsiveClass: true,
      responsive: {
        0: {
          items: 1
        },
      }
    });
  </script>

  <script>
    function showMeal(mealtype) {
      const types = ["biriyani", "mughlai", "pizza", "indian", "chinese", "vegetarian", "grill", "desert"];
      types.forEach(function(type, idx) {
        const el = document.getElementById(type);
        if (el) el.style.display = (type === mealtype) ? 'grid' : 'none';
        const btn = document.getElementById('btn' + (idx + 1));
        if (btn) {
          if (type === mealtype) btn.classList.add('border-b-4');
          else btn.classList.remove('border-b-4');
        }
      });
    }
    document.addEventListener('DOMContentLoaded', function() {
      showMeal('biriyani');
    });
  </script>

