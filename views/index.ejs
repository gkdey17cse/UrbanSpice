  <!-- Meal Button Script -->
  <script>
    function showMeal(mealtype) {
      ['breakfast', 'lunch', 'dinner'].forEach(function(type) {
        var el = document.getElementById(type);
        if (el) el.style.display = (type === mealtype) ? 'grid' : 'none';
      });

      ['btn1', 'btn2', 'btn3'].forEach(function(btn) {
        var button = document.getElementById(btn);
        if (button) {
          if ((mealtype === 'breakfast' && btn === 'btn1') ||
            (mealtype === 'lunch' && btn === 'btn2') ||
            (mealtype === 'dinner' && btn === 'btn3')) {
            button.classList.add('border-b-4');
          } else {
            button.classList.remove('border-b-4');
          }
        }
      });
    }

    document.addEventListener('DOMContentLoaded', function() {
      showMeal('breakfast');
    });
  </script>


